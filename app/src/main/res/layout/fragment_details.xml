<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_coffee"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_menu_gallery" />

            <TextView
                android:id="@+id/txt_coffee_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="15dp"
                android:textAlignment="center">

                <TableRow>

                    <TextView
                        android:id="@+id/lbl_total_evaluation"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:text="@string/total"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_total_star_1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_total_star_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_total_star_3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_total_star_4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_total_star_5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_total_star_6"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_total_star_7"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_total_star_8"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_total_star_9"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_total_star_10"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />
                    </LinearLayout>
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/lbl_taste_evaluation"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:text="@string/taste"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_taste_star_1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_taste_star_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_taste_star_3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_taste_star_4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_taste_star_5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_taste_star_6"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_taste_star_7"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_taste_star_8"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_taste_star_9"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_taste_star_10"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />
                    </LinearLayout>
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/lbl_cost_evaluation"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:text="@string/cost"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_cost_star_1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_cost_star_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_cost_star_3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_cost_star_4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_cost_star_5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_cost_star_6"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_cost_star_7"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_cost_star_8"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_cost_star_9"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_cost_star_10"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />
                    </LinearLayout>
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/lbl_availability_evaluation"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:text="@string/availability"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_availability_star_1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_availability_star_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_availability_star_3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_availability_star_4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_availability_star_5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_availability_star_6"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_availability_star_7"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_availability_star_8"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_availability_star_9"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />

                        <ImageView
                            android:id="@+id/img_availability_star_10"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty" />
                    </LinearLayout>
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/lbl_coffee_type"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:text="@string/coffee_type"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_coffee_type"
                        android:textAlignment="center" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/lbl_store_to_buy_from"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:text="@string/available_at"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_store_to_buy_from"
                        android:textAlignment="center" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/lbl_price"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:text="@string/price_lbl"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_price"
                        android:textAlignment="center" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/lbl_quantity"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:text="@string/quantity_lbl"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_quantity"
                        android:textAlignment="center" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/lbl_strength"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:text="@string/strength"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_strength"
                        android:textAlignment="center" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/lbl_additional_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="5dp"
                        android:layout_span="11"
                        android:text="@string/additional_information"
                        android:textAlignment="textStart"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/txt_additional_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_span="11" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/btn_comments"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:text="@string/comments"
                android:textColor="@color/black"
                android:background="@color/normal_gray"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>